.story
  h2
    a(href='/#{story.url}') #{story.title}
  .header
    - var pubdate = story.dateFormat(story.pubdate);
    span posted on #{pubdate}
    if user
      span
        |  [
        a(href='/story/edit/'+story.sid) edit
        | ]

  .body
    !{story.body}
  .footer
    span Tags: #{story.tags}
